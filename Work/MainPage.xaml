            StyleClass="DeckButtonLayout">
            <Button
                BackgroundColor="{StaticResource YellowDefault}"
                StyleClass="DeckButton"
                Text="100%"
                TextColor="White" />
            <Label StyleClass="DeckButtonLabel" Text="test" />
        </VerticalStackLayout>
        <VerticalStackLayout
            Grid.Row="3"
            Grid.Column="1"
            StyleClass="DeckButtonLayout">
