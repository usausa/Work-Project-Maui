            <Label StyleClass="DeckButtonLabel" Text="test" />
        </VerticalStackLayout>

        <VerticalStackLayout
            Grid.Row="4"
            Grid.Column="3"
            StyleClass="DeckButtonLayout">
            <Button
                StyleClass="DeckButton"
                Text="100%"
                TextColor="White">
                <Button.Background>
                    <LinearGradientBrush>
                        <GradientStop Offset="0.1" Color="#1FA2FF" />
                        <GradientStop Offset="1.0" Color="#12D8FA" />
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Label StyleClass="DeckButtonLabel" Text="test" />
        </VerticalStackLayout>

        <Button
            Grid.Row="5"
            Grid.ColumnSpan="4"
            Command="{Binding StartCommand}"
            HorizontalOptions="Fill"
            Text="Start" />
        <Button
            Grid.Row="6"
            Grid.ColumnSpan="4"
            Command="{Binding StopCommand}"
            HorizontalOptions="Fill"
            Text="Stop" />
    </Grid>

</ContentPage>
