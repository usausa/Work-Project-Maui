            <Label StyleClass="DeckButtonLabel" Text="test" />
        </VerticalStackLayout>
        <VerticalStackLayout
            Grid.Row="2"
            Grid.Column="2"
            StyleClass="DeckButtonLayout">
            <Button
                BackgroundColor="{StaticResource LightGreenDefault}"
                StyleClass="DeckButton"
                Text="100%"
                TextColor="White" />
            <Label StyleClass="DeckButtonLabel" Text="test" />
        </VerticalStackLayout>
        <VerticalStackLayout
            Grid.Row="2"
