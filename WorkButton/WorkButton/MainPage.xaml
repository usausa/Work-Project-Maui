<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="WorkButton.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:workButton="clr-namespace:WorkButton">

    <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,*" RowSpacing="8">

        <Button
            x:Name="MultiLineButton"
            Grid.Row="0"
            FontAttributes="Bold"
            FontSize="24"
            HeightRequest="80"
            LineBreakMode="WordWrap" />

        <Button
            Grid.Row="1"
            FontAttributes="Bold"
            FontSize="24"
            HeightRequest="80"
            Text="Button" />

        <workButton:ButtonEx
            Grid.Row="2"
            FontAttributes="Bold"
            FontSize="24"
            HeightRequest="80"
            Text="Default" />

        <workButton:ButtonEx
            Grid.Row="3"
            FontAttributes="Bold"
            FontSize="24"
            HeightRequest="80"
            HorizontalTextAlignment="Justify"
            Text="Justify"
            VerticalTextAlignment="Justify" />

        <workButton:ButtonEx
            Grid.Row="4"
            FontAttributes="Bold"
            FontSize="24"
            HeightRequest="80"
            HorizontalTextAlignment="Center"
            Text="Center"
            VerticalTextAlignment="Center" />

        <workButton:ButtonEx
            Grid.Row="5"
            FontAttributes="Bold"
            FontSize="24"
            HeightRequest="80"
            HorizontalTextAlignment="Start"
            Text="Left"
            VerticalTextAlignment="End" />

        <workButton:ButtonEx
            Grid.Row="6"
            FontAttributes="Bold"
            FontSize="24"
            HeightRequest="80"
            HorizontalTextAlignment="End"
            Text="Right"
            VerticalTextAlignment="Start" />

        <Label HorizontalTextAlignment="End" VerticalTextAlignment="Center" />

    </Grid>

</ContentPage>
