<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:cv="clr-namespace:Camera.MAUI;assembly=Camera.MAUI" xmlns:workCamera="clr-namespace:WorkCamera"
             x:Class="WorkCamera.MainPage">

    <Grid BackgroundColor="Red">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <cv:CameraView x:Name="CameraView"
                       Grid.Row="0"
                       CamerasLoaded="CameraView_OnCamerasLoaded"
                       HeightRequest="{x:Static workCamera:ScreenSize.Width}" />
    </Grid>

</ContentPage>
