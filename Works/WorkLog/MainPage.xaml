<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="WorkLog.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            VerticalOptions="Center">

            <Button
                Clicked="SingletonButton_OnClicked"
                HorizontalOptions="Center"
                Text="Singleton" />

            <Button
                Clicked="TransientButton_OnClicked"
                HorizontalOptions="Center"
                Text="Transient" />

            <Button
                Clicked="OtherButton_OnClicked"
                HorizontalOptions="Center"
                Text="Other" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
