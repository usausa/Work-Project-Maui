<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:strings="clr-namespace:WorkLocalize.Resources.Strings"
             x:Class="WorkLocalize.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="30,0"
                             Spacing="25" VerticalOptions="Center">

            <Label Text="{x:Static strings:StringResource.Test}"
                   FontSize="32" HorizontalOptions="Center" />

            <Button Text="ja"
                    Clicked="OnButtonJaOnClicked" />

            <Button Text="us"
                    Clicked="OnButtonUsOnClicked" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
