<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorkSwipe.MainPage">

    <VerticalStackLayout Padding="30,0"
                         BackgroundColor="Snow"
                         Spacing="25" VerticalOptions="Center">
        <VerticalStackLayout.GestureRecognizers>
            <SwipeGestureRecognizer Direction="Right" Swiped="SwipeGestureRecognizer_Swiped" Threshold="48" />
        </VerticalStackLayout.GestureRecognizers>

        <Image HeightRequest="200" HorizontalOptions="Center" SemanticProperties.Description="Cute dot net bot waving hi to you!" Source="dotnet_bot.png" />

    </VerticalStackLayout>

</ContentPage>
