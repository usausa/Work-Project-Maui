<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="WorkFont.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:fonts="clr-namespace:WorkFont.Resources.Fonts">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            VerticalOptions="Center">

            <Image
                BackgroundColor="Red"
                HeightRequest="40"
                VerticalOptions="Center"
                WidthRequest="40">
                <Image.Source>
                    <FontImageSource
                        FontFamily="FontAwesomeRegular"
                        Glyph="{x:Static fonts:FontAwesome.Tired}"
                        Color="Black" />
                </Image.Source>
            </Image>

            <Label
                FontFamily="FontAwesomeRegular"
                FontSize="32"
                HorizontalOptions="Center"
                SemanticProperties.HeadingLevel="Level1"
                Text="{x:Static fonts:FontAwesome.Tired}" />

            <Label
                FontFamily="MaterialIconsRegular"
                FontSize="32"
                HorizontalOptions="Center"
                SemanticProperties.HeadingLevel="Level1"
                Text="{x:Static fonts:MaterialIcons._5g}" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
