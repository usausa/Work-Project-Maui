<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:workDesign="using:WorkDesign"
             x:Class="WorkDesign.JoystickControl"
             x:Name="JoyStick"
             x:DataType="{x:Type workDesign:JoystickControl}">

    <Grid RowDefinitions="*,*"
          ColumnDefinitions="*,*"
          BackgroundColor="{Binding Source={x:Reference JoyStick}, Path=BaseBackgroundColor}"
          HorizontalOptions="Center" VerticalOptions="Center">

        <Ellipse Grid.RowSpan="2" Grid.ColumnSpan="2"
                 Fill="{Binding Source={x:Reference JoyStick}, Path=BaseFillColor}"
                 Stroke="{Binding Source={x:Reference JoyStick}, Path=BaseStrokeColor}"
                 StrokeThickness="2" />

        <Polygon x:Name="UpTriangle"
                 Fill="{Binding TriangleColor, Source={x:Reference JoyStick}}"
                 HorizontalOptions="Fill" InputTransparent="True" StrokeThickness="0" VerticalOptions="Fill" />

        <Polygon x:Name="DownTriangle"
                 Fill="{Binding TriangleColor, Source={x:Reference JoyStick}}"
                 HorizontalOptions="Fill" InputTransparent="True" StrokeThickness="0" VerticalOptions="Fill" />

        <Polygon x:Name="LeftTriangle"
                 Fill="{Binding TriangleColor, Source={x:Reference JoyStick}}"
                 HorizontalOptions="Fill" InputTransparent="True" StrokeThickness="0" VerticalOptions="Fill" />

        <Polygon x:Name="RightTriangle"
                 Fill="{Binding TriangleColor, Source={x:Reference JoyStick}}"
                 HorizontalOptions="Fill" InputTransparent="True" StrokeThickness="0" VerticalOptions="Fill" />

        <Ellipse x:Name="Thumb"
                 Grid.RowSpan="2" Grid.ColumnSpan="2"
                 WidthRequest="80" HeightRequest="80"
                 Fill="{Binding ThumbColor, Source={x:Reference JoyStick}}"
                 TranslationX="0" TranslationY="0" />

    </Grid>

</ContentView>
