<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:workDesign="using:WorkDesign"
             x:Class="WorkDesign.JoystickControl"
             x:Name="JoyStick"
             x:DataType="{x:Type workDesign:JoystickControl}"
             WidthRequest="100" HeightRequest="100">
    <Grid>
        <Ellipse Fill="{Binding BaseColor, Source={x:Reference JoyStick}}" />
        <Ellipse x:Name="Thumb"
                 WidthRequest="40" HeightRequest="40"
                 Fill="{Binding ThumbColor, Source={x:Reference JoyStick}}"
                 TranslationX="0" TranslationY="0" />
    </Grid>
</ContentView>
