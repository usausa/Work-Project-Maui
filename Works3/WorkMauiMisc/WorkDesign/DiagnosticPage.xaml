<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:WorkDesign"
             x:Class="WorkDesign.DiagnosticPage"
             Title="DiagnosticPage">

    <ContentPage.BindingContext>
        <local:DiagnosticPageViewModel />
    </ContentPage.BindingContext>

    <Grid RowDefinitions="48,*">

        <Grid Grid.Row="0"
              ColumnDefinitions="48,*,48"
              BackgroundColor="{StaticResource BlueDarken4}">
            <Button Grid.Column="2"
                    Padding="0"
                    Command="{Binding DiagnosticCommand}"
                    IsVisible="{Binding DiagnosticEnabled}"
                    FontSize="28"
                    Text="ðŸ“ˆ"
                    BackgroundColor="Transparent" />
        </Grid>

        <local:DiagnosticPanel Grid.Row="1"
                               IsVisible="{Binding DiagnosticPanelVisible}"
                               HorizontalOptions="End" TranslationX="0" TranslationY="0" VerticalOptions="Start"
                               ZIndex="1000" />

        <Label Text="{Binding DiagnosticPanelVisible}" />

        <AbsoluteLayout Grid.Row="1"
                        BackgroundColor="White">
            <ContentView AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="All">
                <Grid RowDefinitions="*,*,*,*,*,*,*,*">
                    <Button Grid.Row="0"
                            Command="{Binding TestCommand}"
                            Text="Test"
                            BackgroundColor="{StaticResource CyanDefault}" />
                    <Button Grid.Row="1"
                            Command="{Binding TestCommand}"
                            Text="Test"
                            BackgroundColor="{StaticResource CyanDefault}" />
                </Grid>
            </ContentView>
        </AbsoluteLayout>

    </Grid>

</ContentPage>