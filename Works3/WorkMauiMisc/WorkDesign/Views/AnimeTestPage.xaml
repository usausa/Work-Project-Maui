<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorkDesign.AnimeTestPage"
             Title="AnimeTestPage">

    <Grid RowDefinitions="*,Auto">

        <BoxView x:Name="AnimatedBox"
                 Grid.Row="0"
                 WidthRequest="120" HeightRequest="120"
                 Color="#FF6F61"
                 CornerRadius="12" HorizontalOptions="Center" TranslationX="0" TranslationY="0"
                 VerticalOptions="Center" />

        <Grid Grid.Row="1"
              RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto"
              ColumnDefinitions="*,*"
              ColumnSpacing="8" RowSpacing="8">

            <Button Grid.Row="0" Grid.Column="0"
                    Text="TranslationX"
                    Clicked="OnTest1Clicked" />
            <Button Grid.Row="0" Grid.Column="1"
                    Text="TranslationY"
                    Clicked="OnTest2Clicked" />

            <Button Grid.Row="1" Grid.Column="0"
                    Text="Mixed"
                    Clicked="OnTest3Clicked" />
            <Button Grid.Row="1" Grid.Column="1"
                    Text="Built in"
                    Clicked="OnTest4Clicked" />

            <Button Grid.Row="2" Grid.Column="0"
                    Text="Reuse"
                    Clicked="OnTest5Clicked" />
            <Button Grid.Row="2" Grid.Column="1"
                    Text="Rotate"
                    Clicked="OnTest6Clicked" />

            <Button Grid.Row="3" Grid.Column="0"
                    Text="Scale pulse"
                    Clicked="OnTest7Clicked" />
            <Button Grid.Row="3" Grid.Column="1"
                    Text="Blink"
                    Clicked="OnTest8Clicked" />

            <Button Grid.Row="4" Grid.Column="0"
                    Text="Parallel"
                    Clicked="OnTest9Clicked" />
            <Button Grid.Row="4" Grid.Column="1"
                    Text="Sequence"
                    Clicked="OnTest10Clicked" />

            <Button Grid.Row="5" Grid.Column="0"
                    Text="Spring"
                    Clicked="OnTest11Clicked" />
            <Button Grid.Row="5" Grid.Column="1"
                    Text="Elastic"
                    Clicked="OnTest12Clicked" />

            <Button Grid.Row="6" Grid.Column="0"
                    Text="Chain"
                    Clicked="OnTest13Clicked" />
        </Grid>

    </Grid>

</ContentPage>