<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:app="clr-namespace:WorkDesign"
             xmlns:fonts="clr-namespace:Fonts"
             x:Class="WorkDesign.BasicSwipePage"
             x:DataType="{x:Type app:BasicSwipePageViewModel}"
             Title="BasicSwipePage">

    <ContentPage.BindingContext>
        <app:BasicSwipePageViewModel />
    </ContentPage.BindingContext>

    <CollectionView ItemsSource="{Binding Results}">
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="app:BasicEntity">
                <SwipeView>
                    <SwipeView.RightItems>
                        <SwipeItems>
                            <!--
                            <SwipeItem Command="{Binding BindingContext.DeleteCommand, Source={RelativeSource AncestorType={x:Type ContentPage}}}"
                                       CommandParameter="{Binding .}"
                                       Text="削除"
                                       BackgroundColor="Red">
                                <SwipeItem.IconImageSource>
                                    <FontImageSource Color="White"
                                                     FontFamily="MaterialIcons"
                                                     Glyph="{x:Static fonts:MaterialIcons.Recycling}"
                                                     Size="24" />
                                </SwipeItem.IconImageSource>
                            </SwipeItem>
                            -->
                            <!-- ReSharper disable once Xaml.BindingWithContextNotResolved -->
                            <SwipeItemView Command="{Binding Source={RelativeSource AncestorType={x:Type app:BasicSwipePageViewModel}}, Path=DeleteCommand, x:DataType=app:BasicSwipePageViewModel}"
                                           CommandParameter="{Binding .}"
                                           BackgroundColor="Red">
                                <Label Text="削除"
                                       TextColor="White"
                                       HorizontalOptions="Center" VerticalOptions="Center" />
                            </SwipeItemView>
                        </SwipeItems>
                    </SwipeView.RightItems>

                    <Grid ColumnDefinitions="Auto,Auto,Auto"
                          HeightRequest="48">
                        <Label Grid.Column="0"
                               Text="{Binding Id}" />
                        <Label Grid.Column="1"
                               Text="{Binding Group}" />
                        <Label Grid.Column="2"
                               Text="{Binding Name}" />
                    </Grid>
                </SwipeView>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>