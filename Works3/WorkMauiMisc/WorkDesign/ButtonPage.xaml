                            TextColor="Black" />
                        <Label
                            FontSize="36"
                            Text="test"
                            TextColor="Black" />

                    </VerticalStackLayout>
                </Border>

                <Border BackgroundColor="White">
                    <VerticalStackLayout Padding="12" Spacing="12">

                        <Label
                            FontSize="36"
                            Text="test"
                            TextColor="Black" />
                        <Label
                            FontSize="36"
                            Text="test"
                            TextColor="Black" />
