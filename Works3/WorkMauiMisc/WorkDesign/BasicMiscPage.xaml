<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:s="clr-namespace:Smart.Maui.Data;assembly=Smart.Maui"
             xmlns:app="clr-namespace:WorkDesign"
             xmlns:font="clr-namespace:Fonts"
             x:Class="WorkDesign.BasicMiscPage"
             x:Name="ThisPage"
             x:DataType="{x:Type app:BasicMiscPageViewModel}"
             Title="BasicMiscPage">

    <ContentPage.Resources>
        <ResourceDictionary>

            <s:BoolToTextConverter x:Key="BoolToExpandImageConverter"
                                   TrueValue="▼"
                                   FalseValue="▲" />
            <s:BoolToColorConverter x:Key="BoolToBackgroundColorConverter"
                                    TrueValue="White"
                                    FalseValue="{StaticResource YellowLighten5}" />

        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.BindingContext>
        <app:BasicMiscPageViewModel />
    </ContentPage.BindingContext>

    <CollectionView ItemsSource="{Binding List}"
                    IsGrouped="True">
        <CollectionView.GroupHeaderTemplate>
            <DataTemplate x:DataType="{x:Type app:AddressGroup}">

                <Grid ColumnDefinitions="*,Auto"
                      Margin="0" Padding="8"
                      BackgroundColor="{StaticResource GrayLighten1}">

                    <!-- グループ名 -->
                    <Label Grid.Column="0"
                           FontSize="28" FontAttributes="Bold"
                           Text="{Binding Key}"
                           TextColor="{StaticResource GrayDarken3}"
                           VerticalOptions="Center" />

                    <!-- 展開/折りたたみボタン -->
                    <!-- ReSharper disable once Xaml.BindingWithContextNotResolved -->
                    <Button Grid.Column="1"
                            WidthRequest="40" HeightRequest="40"
                            Padding="0"
                            Command="{Binding Source={RelativeSource AncestorType={x:Type app:BasicMiscPageViewModel}}, Path=ToggleCommand, x:DataType={x:Type app:BasicMiscPageViewModel}}"
                            CommandParameter="{Binding .}"
                            FontSize="18"
                            Text="{Binding IsExpanded, Converter={StaticResource BoolToExpandImageConverter}}"
                            TextColor="White"
                            BackgroundColor="{StaticResource BlueGrayDefault}"
                            CornerRadius="20" />

                </Grid>

            </DataTemplate>
        </CollectionView.GroupHeaderTemplate>
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="{x:Type app:AddressRow}">

                <Grid RowDefinitions="Auto,Auto"
                      ColumnDefinitions="56,Auto,4,*,Auto,4,*"
                      Padding="4"
                      BackgroundColor="{Binding IsEven, Converter={StaticResource BoolToBackgroundColorConverter}}">

                    <Image Grid.Row="0" Grid.RowSpan="2" Grid.Column="0"
                           WidthRequest="48" HeightRequest="48"
                           HorizontalOptions="Start"
                           Source="{Binding Value.Image}"
                           VerticalOptions="Center" />

                    <Label Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="6"
                           FontSize="24"
                           Text="{Binding Value.Name}"
                           TextColor="{StaticResource GrayDarken2}" />

                    <Label Grid.Row="1" Grid.Column="1"
                           FontFamily="MaterialIcons" FontSize="16"
                           Text="{x:Static font:MaterialIcons.Phone}"
                           TextColor="{StaticResource GrayDarken1}"
                           VerticalOptions="End" />

                    <Label Grid.Row="1" Grid.Column="3"
                           FontSize="16"
                           Text="{Binding Value.PhoneNumber}"
                           TextColor="{StaticResource GrayDarken1}"
                           VerticalOptions="End" />

                    <Label Grid.Row="1" Grid.Column="4"
                           FontFamily="MaterialIcons" FontSize="16"
                           Text="{x:Static font:MaterialIcons.Email}"
                           TextColor="{StaticResource GrayDarken1}"
                           VerticalOptions="End" />

                    <Label Grid.Row="1" Grid.Column="6"
                           FontSize="16"
                           Text="{Binding Value.MailAddress}"
                           TextColor="{StaticResource GrayDarken1}"
                           VerticalOptions="End" />
                </Grid>

            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>