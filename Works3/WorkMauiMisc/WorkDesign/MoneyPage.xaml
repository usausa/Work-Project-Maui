<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="WorkDesign.MoneyPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:app="clr-namespace:WorkDesign"
    xmlns:toolkit="http://schemas.syncfusion.com/maui/toolkit"
    Title="MoneyPage">

    <ContentPage.BindingContext>
        <app:MoneyPageViewModel />
    </ContentPage.BindingContext>

    <Grid RowDefinitions="*,36,*">

        <BoxView Grid.Row="0" BackgroundColor="AntiqueWhite" />
        <BoxView Grid.Row="2" BackgroundColor="AntiqueWhite" />

        <Border
            Grid.Row="1"
            StrokeShape="RoundRectangle 18"
            StrokeThickness="0"
            TranslationY="-18"
            WidthRequest="320">
            <toolkit:SfEffectsView
                BackgroundColor="Snow"
                TouchDownEffects="Ripple"
                TouchUpCommand="{Binding Execute}">
                <Label
                    HorizontalOptions="Center"
                    Text="Welcome to .NET MAUI!"
                    VerticalOptions="Center" />
            </toolkit:SfEffectsView>
        </Border>

    </Grid>

</ContentPage>