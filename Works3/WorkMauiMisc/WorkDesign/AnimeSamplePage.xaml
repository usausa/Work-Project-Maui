<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:s="http://smart/maui"
             xmlns:app="clr-namespace:WorkDesign"
             x:Class="WorkDesign.AnimeSamplePage"
             x:DataType="{x:Type app:AnimeSamplePageViewModel}"
             Title="AnimeSamplePage">

    <ContentPage.BindingContext>
        <app:AnimeSamplePageViewModel />
    </ContentPage.BindingContext>

    <Grid RowDefinitions="*,*,2*,2*,2*,Auto"
          ColumnDefinitions="*,*"
          ColumnSpacing="6" RowSpacing="6">

        <Button Grid.Row="0" Grid.Column="0"
                WidthRequest="120" HeightRequest="48"
                Text="Fade"
                BackgroundColor="{StaticResource BlueDefault}">
            <Button.Behaviors>
                <s:EventActionBehavior EventName="Clicked">
                    <s:BeginAnimationAction>
                        <s:SequentialAnimation>
                            <s:FadeToAnimation Opacity="0.5" />
                            <s:FadeToAnimation Opacity="1.0" />
                        </s:SequentialAnimation>
                    </s:BeginAnimationAction>
                </s:EventActionBehavior>
            </Button.Behaviors>
        </Button>

        <Button Grid.Row="0" Grid.Column="1"
                WidthRequest="120" HeightRequest="48"
                Text="Rotate"
                BackgroundColor="{StaticResource BlueDefault}">
            <Button.Behaviors>
                <s:EventActionBehavior EventName="Clicked">
                    <s:BeginAnimationAction>
                        <s:SequentialAnimation>
                            <s:RotateToAnimation Rotation="10" />
                            <s:RotateToAnimation Rotation="0" />
                        </s:SequentialAnimation>
                    </s:BeginAnimationAction>
                </s:EventActionBehavior>
            </Button.Behaviors>
        </Button>

        <Button Grid.Row="1" Grid.Column="0"
                WidthRequest="120" HeightRequest="48"
                Text="Scale"
                BackgroundColor="{StaticResource BlueDefault}">
            <Button.Behaviors>
                <s:EventActionBehavior EventName="Clicked">
                    <s:BeginAnimationAction>
                        <s:SequentialAnimation>
                            <s:ScaleToAnimation Scale="0.8" />
                            <s:ScaleToAnimation Scale="1" />
                        </s:SequentialAnimation>
                    </s:BeginAnimationAction>
                </s:EventActionBehavior>
            </Button.Behaviors>
        </Button>

        <Border Grid.Row="2" Grid.Column="0"
                WidthRequest="80" HeightRequest="80"
                BackgroundColor="{StaticResource OrangeDefault}">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="16" />
            </Border.StrokeShape>
            <Border.Behaviors>
                <s:TapActionBehavior>
                    <s:BeginAnimationAction>
                        <s:SequentialAnimation>
                            <s:RotateToAnimation Duration="1000"
                                                 Rotation="360" />
                            <s:RotateToAnimation Duration="0"
                                                 Rotation="0" />
                        </s:SequentialAnimation>
                    </s:BeginAnimationAction>
                </s:TapActionBehavior>
            </Border.Behaviors>
            <Label Text="Rotate"
                   HorizontalOptions="Center" VerticalOptions="Center" />

        </Border>

        <Border Grid.Row="2" Grid.Column="1"
                WidthRequest="96" HeightRequest="96"
                BackgroundColor="{StaticResource OrangeDefault}">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="16" />
            </Border.StrokeShape>
            <Border.Behaviors>
                <s:TapActionBehavior>
                    <s:BeginAnimationAction>
                        <s:RelRotateToAnimation Rotation="90" />
                    </s:BeginAnimationAction>
                </s:TapActionBehavior>
            </Border.Behaviors>
            <Label Text="RelRotate"
                   HorizontalOptions="Center" VerticalOptions="Center" />
        </Border>

        <Border Grid.Row="3" Grid.ColumnSpan="2"
                WidthRequest="96" HeightRequest="96"
                BackgroundColor="{StaticResource PurpleDefault}">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="16" />
            </Border.StrokeShape>
            <Border.Behaviors>
                <s:TapActionBehavior>
                    <s:BeginAnimationAction>
                        <s:SequentialAnimation>
                            <s:ParallelAnimation>
                                <s:TranslateToAnimation Duration="600"
                                                        Easing="{x:Static Easing.SinInOut}"
                                                        TranslateX="90" TranslateY="-30" />
                                <s:RotateToAnimation Duration="600"
                                                     Easing="{x:Static Easing.CubicInOut}"
                                                     Rotation="270" />
                                <s:ScaleToAnimation Duration="600"
                                                    Easing="{x:Static Easing.CubicOut}"
                                                    Scale="1.4" />
                            </s:ParallelAnimation>
                            <s:ScaleToAnimation Duration="300"
                                                Scale="1" />
                            <s:RotateToAnimation Duration="300"
                                                 Rotation="0" />
                            <s:TranslateToAnimation Duration="300"
                                                    TranslateX="0" TranslateY="0" />
                        </s:SequentialAnimation>
                    </s:BeginAnimationAction>
                </s:TapActionBehavior>
            </Border.Behaviors>
            <Label Text="Sequence"
                   HorizontalOptions="Center" VerticalOptions="Center" />

        </Border>

        <Border Grid.Row="4" Grid.ColumnSpan="2"
                WidthRequest="96" HeightRequest="96"
                BackgroundColor="{StaticResource PinkDefault}">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="16" />
            </Border.StrokeShape>
            <Border.Behaviors>
                <s:TapActionBehavior>
                    <s:BeginAnimationAction>
                        <app:SpringAnimation />
                    </s:BeginAnimationAction>
                </s:TapActionBehavior>
            </Border.Behaviors>
            <Label Text="Custom"
                   HorizontalOptions="Center" VerticalOptions="Center" />
        </Border>

        <Grid Grid.Row="5" Grid.ColumnSpan="2"
              ColumnDefinitions="*,*">
            <Button Grid.Column="0"
                    Text="1" />
            <Button Grid.Column="1"
                    Text="2" />
        </Grid>
    </Grid>

</ContentPage>