<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="WorkDesign.Home2Page"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Home2Page">

    <AbsoluteLayout>
        <!--  メインコンテンツ  -->
        <StackLayout
            AbsoluteLayout.LayoutBounds="0,0,1,1"
            AbsoluteLayout.LayoutFlags="All"
            BackgroundColor="LightGray">
            <!--  ページ内容  -->
        </StackLayout>

        <!--  ボトムバー  -->
        <Grid AbsoluteLayout.LayoutBounds="0,1,1,64" AbsoluteLayout.LayoutFlags="WidthProportional,PositionProportional">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Text="Home" />
            <Button Grid.Column="2" Text="Profile" />
        </Grid>

        <!--  中央ボタン  -->
        <Frame
            AbsoluteLayout.LayoutBounds="0.5,1,72,72"
            AbsoluteLayout.LayoutFlags="PositionProportional"
            BackgroundColor="DodgerBlue"
            CornerRadius="36"
            TranslationY="-36">
            <ImageButton Source="plus_icon.png" />
        </Frame>
    </AbsoluteLayout>

</ContentPage>