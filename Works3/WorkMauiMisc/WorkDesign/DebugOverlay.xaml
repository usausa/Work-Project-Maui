<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorkDesign.DebugOverlay"
             Padding="3"
             BackgroundColor="LightGray"
             InputTransparent="True" Opacity="0.75">

    <ContentView.Resources>
        <ResourceDictionary>

            <Style x:Key="DebugValueLabel"
                   TargetType="Label">
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="FontSize" Value="14" />
                <Setter Property="TextColor" Value="Black" />
            </Style>

            <Style x:Key="SeparatorBoxView"
                   TargetType="BoxView">
                <Setter Property="HeightRequest" Value="1" />
                <Setter Property="Margin" Value="0,3" />
                <Setter Property="Color" Value="Gray" />
            </Style>

        </ResourceDictionary>
    </ContentView.Resources>

    <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto"
          ColumnDefinitions="Auto,3,Auto">

        <Label Grid.Row="0" Grid.Column="0"
               Style="{StaticResource DebugValueLabel}"
               Text="FPS:" />
        <Label Grid.Row="0" Grid.Column="2"
               Style="{StaticResource DebugValueLabel}"
               Text="60.0" />

        <Label Grid.Row="1" Grid.Column="0"
               Style="{StaticResource DebugValueLabel}"
               Text="FrameTime:" />
        <Label Grid.Row="1" Grid.Column="2"
               Style="{StaticResource DebugValueLabel}"
               Text="16.0ms" />

        <BoxView Grid.Row="2" Grid.ColumnSpan="3"
                 Style="{StaticResource SeparatorBoxView}" />

        <Label Grid.Row="3" Grid.Column="0"
               Style="{StaticResource DebugValueLabel}"
               Text="CPU:" />
        <Label Grid.Row="3" Grid.Column="2"
               Style="{StaticResource DebugValueLabel}"
               Text="100%" />

        <Label Grid.Row="4" Grid.Column="0"
               Style="{StaticResource DebugValueLabel}"
               Text="Threads:" />
        <Label Grid.Row="4" Grid.Column="2"
               Style="{StaticResource DebugValueLabel}"
               Text="256" />

        <BoxView Grid.Row="5" Grid.ColumnSpan="3"
                 Style="{StaticResource SeparatorBoxView}" />

        <Label Grid.Row="6" Grid.Column="0"
               Style="{StaticResource DebugValueLabel}"
               Text="Memory:" />
        <Label Grid.Row="6" Grid.Column="2"
               Style="{StaticResource DebugValueLabel}"
               Text="256.0MB" />

        <Label Grid.Row="7" Grid.Column="0"
               Style="{StaticResource DebugValueLabel}"
               Text="GC0:" />
        <Label Grid.Row="7" Grid.Column="2"
               Style="{StaticResource DebugValueLabel}"
               Text="1000" />

        <Label Grid.Row="8" Grid.Column="0"
               Style="{StaticResource DebugValueLabel}"
               Text="GC1:" />
        <Label Grid.Row="8" Grid.Column="2"
               Style="{StaticResource DebugValueLabel}"
               Text="10" />

        <Label Grid.Row="9" Grid.Column="0"
               Style="{StaticResource DebugValueLabel}"
               Text="GC2:" />
        <Label Grid.Row="9" Grid.Column="2"
               Style="{StaticResource DebugValueLabel}"
               Text="1" />

        <Label Grid.Row="10" Grid.Column="0"
               Style="{StaticResource DebugValueLabel}"
               Text="Alloc/sec:" />
        <Label Grid.Row="10" Grid.Column="2"
               Style="{StaticResource DebugValueLabel}"
               Text="10.0MB" />

        <BoxView Grid.Row="11" Grid.ColumnSpan="3"
                 Style="{StaticResource SeparatorBoxView}" />

        <Label Grid.Row="12" Grid.Column="0"
               Style="{StaticResource DebugValueLabel}"
               Text="Battery:" />
        <Label Grid.Row="12" Grid.Column="2"
               Style="{StaticResource DebugValueLabel}"
               Text="1000mW" />

    </Grid>

</ContentView>
