        <Grid Grid.Row="5" Grid.ColumnSpan="3"
              ColumnDefinitions="*,*">
            <Button Grid.Column="0"
                    Command="{Binding AnimationCommand}"
                    Text="Start" />
            <Button Grid.Column="1"
                    Text="2" />
        </Grid>

    </Grid>

</ContentPage>