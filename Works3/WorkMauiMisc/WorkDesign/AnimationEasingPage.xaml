                </BoxView.Behaviors>
            </BoxView>
        </Grid>

        <Grid Grid.Row="2" Grid.Column="1"
              BackgroundColor="{StaticResource GreenLighten4}">
            <Label Text="CubicOut"
                   HorizontalOptions="Center" VerticalOptions="Center" />
