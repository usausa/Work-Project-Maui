<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:app="using:WorkDesign"
             x:Class="WorkDesign.BasicRefreshPage"
             x:DataType="{x:Type app:BasicRefreshPageViewModel}"
             Title="BasicRefreshPage">

    <ContentPage.BindingContext>
        <app:BasicRefreshPageViewModel />
    </ContentPage.BindingContext>

    <RefreshView Command="{Binding RefreshCommand}"
                 IsRefreshing="{Binding IsRefreshing}">
        <CollectionView ItemsSource="{Binding Results}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="app:BasicEntity">
                    <Grid ColumnDefinitions="Auto,Auto,Auto">
                        <Label Grid.Column="0"
                               Text="{Binding Id}" />
                        <Label Grid.Column="1"
                               Text="{Binding Group}" />
                        <Label Grid.Column="2"
                               Text="{Binding Name}" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </RefreshView>
</ContentPage>
