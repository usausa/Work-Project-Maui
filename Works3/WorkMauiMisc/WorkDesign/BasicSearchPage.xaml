<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:app="using:WorkDesign"
             x:Class="WorkDesign.BasicSearchPage"
             x:DataType="{x:Type app:BasicSearchPageViewModel}"
             Title="BasicSearchPage">

    <ContentPage.BindingContext>
        <app:BasicSearchPageViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout>
        <SearchBar x:Name="Input"
                   TextChanged="IOnTextChanged"
                   SearchCommand="{Binding SearchCommand}"
                   SearchCommandParameter="{Binding Text, x:DataType='SearchBar', Source={x:Reference Input}}" />
        <CollectionView ItemsSource="{Binding Results}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="app:BasicEntity">
                    <Grid ColumnDefinitions="Auto,Auto,Auto">
                        <Label Grid.Column="0"
                               Text="{Binding Id}" />
                        <Label Grid.Column="1"
                               Text="{Binding Group}" />
                        <Label Grid.Column="2"
                               Text="{Binding Name}" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>

</ContentPage>