<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:workDesign="using:WorkDesign"
             x:Class="WorkDesign.JoystickControl2"
             x:Name="ThisControl"
             x:DataType="{x:Type workDesign:JoystickControl2}">

    <Grid x:Name="JoystickContainer"
          BackgroundColor="{Binding Source={x:Reference ThisControl}, Path=BaseBackgroundColor}"
          HorizontalOptions="Center" VerticalOptions="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Ellipse x:Name="BaseEllipse"
                 Grid.RowSpan="2" Grid.ColumnSpan="2"
                 Fill="{Binding Source={x:Reference ThisControl}, Path=BaseFillColor}"
                 Stroke="{Binding Source={x:Reference ThisControl}, Path=BaseStrokeColor}"
                 StrokeThickness="2" />

        <Path x:Name="TopTriangle"
              Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
              Fill="{Binding Source={x:Reference ThisControl}, Path=TriangleColor}"
              HorizontalOptions="Center" VerticalOptions="End" />

        <Path x:Name="BottomTriangle"
              Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
              Fill="{Binding Source={x:Reference ThisControl}, Path=TriangleColor}"
              HorizontalOptions="Center" VerticalOptions="Start" />

        <Path x:Name="LeftTriangle"
              Grid.Row="0" Grid.RowSpan="2" Grid.Column="0"
              Fill="{Binding Source={x:Reference ThisControl}, Path=TriangleColor}"
              HorizontalOptions="End" VerticalOptions="Center" />

        <Path x:Name="RightTriangle"
              Grid.Row="0" Grid.RowSpan="2" Grid.Column="1"
              Fill="{Binding Source={x:Reference ThisControl}, Path=TriangleColor}"
              HorizontalOptions="Start" VerticalOptions="Center" />

        <Ellipse x:Name="Thumb"
                 Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" Grid.ColumnSpan="2"
                 Fill="{Binding Source={x:Reference ThisControl}, Path=ThumbColor}"
                 HorizontalOptions="Center" VerticalOptions="Center" />
        <!-- Fill="{Binding Source={x:Reference ThisControl}, Path=ThumbFill}" -->
        <!-- Fill="{Binding Source={x:Reference ThisControl}, Path=ThumbColor}" -->
    </Grid>
</ContentView>
