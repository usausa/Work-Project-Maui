<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:app="clr-namespace:WorkDesign"
             x:Class="WorkDesign.BasicCollectionPage"
             x:DataType="{x:Type app:BasicCollectionPageViewModel}"
             Title="BasicCollectionPage">

    <ContentPage.Resources>
        <ResourceDictionary>
            <app:BoolToExpandCollapseConverter x:Key="ExpandCollapseConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.BindingContext>
        <app:BasicCollectionPageViewModel />
    </ContentPage.BindingContext>

    <CollectionView ItemsSource="{Binding Results}"
                    IsGrouped="True">
        <CollectionView.GroupHeaderTemplate>
            <DataTemplate x:DataType="app:BasicGroup">
                <Grid Padding="10"
                      BackgroundColor="#e0e0e0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <!-- グループ名 -->
                    <Label Grid.Column="0"
                           FontSize="Medium" FontAttributes="Bold"
                           Text="{Binding Key}"
                           VerticalOptions="Center" />
                    <!-- 展開/折りたたみボタン -->
                    <!-- ReSharper disable once Xaml.BindingWithContextNotResolved -->
                    <Button Grid.Column="1"
                            WidthRequest="40" HeightRequest="40"
                            Padding="0"
                            Command="{Binding Source={RelativeSource AncestorType={x:Type app:BasicCollectionPageViewModel}}, Path=ToggleCommand, x:DataType=app:BasicCollectionPageViewModel}"
                            CommandParameter="{Binding .}"
                            Text="{Binding IsExpanded, Converter={StaticResource ExpandCollapseConverter}}"
                            TextColor="White" BackgroundColor="#3498db"
                            CornerRadius="20" />
                </Grid>
            </DataTemplate>
        </CollectionView.GroupHeaderTemplate>
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="app:BasicEntity">
                <Grid ColumnDefinitions="Auto,Auto,Auto">
                    <Label Grid.Column="0"
                           Text="{Binding Id}" />
                    <Label Grid.Column="1"
                           Text="{Binding Group}" />
                    <Label Grid.Column="2"
                           Text="{Binding Name}" />
                </Grid>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>