<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:app="clr-namespace:WorkDesign"
             x:Class="WorkDesign.BasicCollectionPage"
             x:DataType="{x:Type app:BasicCollectionPageViewModel}"
             Title="BasicCollectionPage">

    <ContentPage.BindingContext>
        <app:BasicCollectionPageViewModel />
    </ContentPage.BindingContext>

    <CollectionView ItemsSource="{Binding Results}"
                    IsGrouped="True">
        <CollectionView.GroupHeaderTemplate>
            <DataTemplate x:DataType="app:GroupEntity">
                <Label FontSize="18" FontAttributes="Bold"
                       Text="{Binding Group}"
                       BackgroundColor="LightGray" />
            </DataTemplate>
        </CollectionView.GroupHeaderTemplate>
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="app:BasicEntity">
                <Grid ColumnDefinitions="Auto,Auto,Auto">
                    <Label Grid.Column="0"
                           Text="{Binding Id}" />
                    <Label Grid.Column="1"
                           Text="{Binding Group}" />
                    <Label Grid.Column="2"
                           Text="{Binding Name}" />
                </Grid>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>