<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:workDesign="clr-namespace:WorkDesign"
             x:Class="WorkDesign.CalendarPage"
             Title="CalendarPage">

    <Grid RowDefinitions="Auto,*">
        <!-- カレンダーのヘッダー部分 -->
        <Grid Grid.Row="0"
              ColumnDefinitions="Auto,*,Auto"
              Padding="10">
            <Button Grid.Column="0"
                    Text="前月"
                    Clicked="OnPreviousMonthClicked" />
            <Label x:Name="MonthYearLabel"
                   Grid.Column="1"
                   FontSize="18" FontAttributes="Bold"
                   HorizontalOptions="Center" VerticalOptions="Center" />
            <Button Grid.Column="2"
                    Text="次月"
                    Clicked="OnNextMonthClicked" />
        </Grid>

        <!-- カレンダー本体 -->
        <workDesign:CalendarView x:Name="CalendarViewControl"
                                 Grid.Row="1"
                                 HeightRequest="500" />
    </Grid>

</ContentPage>