<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mi="http://www.aathifmahir.com/dotnet/2022/maui/icons"
             x:Class="WorkIcon.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="30,0"
                             Spacing="25">

            <mi:MauiIcon Icon="{mi:FontAwesomeBrand Windows}" />

            <Image Aspect="Center"
                   mi:MauiIcon.Value="{mi:FontAwesomeBrand Icon=Windows}" />

            <Button mi:MauiIcon.Value="{mi:FontAwesomeBrand Icon=Windows}" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
