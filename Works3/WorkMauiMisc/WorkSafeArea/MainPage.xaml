<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="WorkSafeArea.MainPage"
             BackgroundColor="DarkGray"
             SafeAreaEdges="None" Shell.NavBarIsVisible="False">

    <ContentPage.Behaviors>
        <toolkit:StatusBarBehavior ApplyOn="OnBehaviorAttachedTo" StatusBarColor="Green" StatusBarStyle="Default" />
    </ContentPage.Behaviors>

    <Grid>
        <BoxView WidthRequest="100" HeightRequest="100"
                 BackgroundColor="Red"
                 HorizontalOptions="Start" VerticalOptions="Start" />
    </Grid>

</ContentPage>
