<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorkCommunication.MainPage">

    <VerticalStackLayout Padding="30,0"
                         Spacing="25">
        <Button Text="Dial"
                Clicked="OnDialClicked" HorizontalOptions="Fill" />
        <Button Text="SMS"
                Clicked="OnSmsClicked" HorizontalOptions="Fill" />
        <Button Text="Email"
                Clicked="OnEmailClicked" HorizontalOptions="Fill" />
    </VerticalStackLayout>

</ContentPage>
