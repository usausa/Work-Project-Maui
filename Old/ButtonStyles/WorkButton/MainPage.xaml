<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="WorkButton.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:workButton="clr-namespace:WorkButton">

    <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,*" RowSpacing="4">

        <Button
            x:Name="MultiLineButton"
            Grid.Row="0"
            FontAttributes="Bold"
            FontSize="24"
            HeightRequest="80"
            LineBreakMode="WordWrap" />

        <Button
            Grid.Row="1"
            FontAttributes="Bold"
            FontSize="24"
            HeightRequest="80"
            Text="Button" />

        <workButton:ButtonEx
            Grid.Row="2"
            workButton:Buttons.EnableTextAlignment="True"
            workButton:Buttons.HorizontalTextAlignment="Justify"
            workButton:Buttons.VerticalTextAlignment="Justify"
            FontAttributes="Bold"
            FontSize="24"
            HeightRequest="80"
            Text="Justify" />

        <workButton:ButtonEx
            Grid.Row="3"
            workButton:Buttons.EnableTextAlignment="True"
            workButton:Buttons.HorizontalTextAlignment="Center"
            workButton:Buttons.VerticalTextAlignment="Center"
            FontAttributes="Bold"
            FontSize="24"
            HeightRequest="80"
            Text="Center" />

        <workButton:ButtonEx
            Grid.Row="4"
            workButton:Buttons.EnableTextAlignment="True"
            workButton:Buttons.HorizontalTextAlignment="Start"
            workButton:Buttons.VerticalTextAlignment="End"
            FontAttributes="Bold"
            FontSize="24"
            HeightRequest="80"
            Text="Left" />

        <workButton:ButtonEx
            Grid.Row="5"
            workButton:Buttons.EnableTextAlignment="True"
            workButton:Buttons.HorizontalTextAlignment="End"
            workButton:Buttons.VerticalTextAlignment="Start"
            FontAttributes="Bold"
            FontSize="24"
            HeightRequest="80"
            Text="Right" />

        <ImageButton
            Grid.Row="6"
            CornerRadius="8"
            HeightRequest="80"
            Source="play_circle.svg">
            <ImageButton.Background>
                <LinearGradientBrush>
                    <GradientStop Offset="0.1" Color="#1FA2FF" />
                    <GradientStop Offset="1.0" Color="#12D8FA" />
                </LinearGradientBrush>
            </ImageButton.Background>
        </ImageButton>

        <ImageButton
            Grid.Row="7"
            CornerRadius="8"
            HeightRequest="80"
            Source="stop_circle2.png">
            <ImageButton.Background>
                <LinearGradientBrush>
                    <GradientStop Offset="0.1" Color="#1FA2FF" />
                    <GradientStop Offset="1.0" Color="#12D8FA" />
                </LinearGradientBrush>
            </ImageButton.Background>
        </ImageButton>

        <ImageButton
            x:Name="SourceButton"
            Grid.Row="8"
            CornerRadius="8"
            HeightRequest="80"
            Clicked="SourceButton_OnClicked">
            <ImageButton.Background>
                <LinearGradientBrush>
                    <GradientStop Offset="0.1" Color="#1FA2FF" />
                    <GradientStop Offset="1.0" Color="#12D8FA" />
                </LinearGradientBrush>
            </ImageButton.Background>
        </ImageButton>

    </Grid>

</ContentPage>
