<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="HttpExample.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:HttpExample"
    x:DataType="{x:Type local:MainPageViewModel}">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            VerticalOptions="Center">

            <Button Command="{Binding GetCommand}" Text="Get" />
            <Button Command="{Binding PostCommand}" Text="Post" />

            <Button Command="{Binding Get2Command}" Text="Get2" />
            <Button Command="{Binding Post2Command}" Text="Post2" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
