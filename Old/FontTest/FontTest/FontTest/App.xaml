<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FontTest.App">
	<Application.Resources>

		<ResourceDictionary>

            <OnPlatform x:Key="Ionicons" x:TypeArguments="x:String">
		        <On Platform="iOS">ionicons</On>
		        <On Platform="Android">Fonts/ionicons.ttf</On>
		        <On Platform="UWP">Assets/Fonts/ionicons.ttf#ionicons</On>
		    </OnPlatform>

        </ResourceDictionary>

	</Application.Resources>
</Application>